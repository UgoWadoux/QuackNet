{% extends 'base.html.twig' %}

{% block title %}Mofifier vos informations{% endblock %}

{% block body %}

<div class="example-wrapper mx-auto max-w-2xl p-8 bg-primary shadow-md ">
    <h1 class="text-3xl font-extrabold mb-4 text-black text-center">Modifier vos infos</h1>

 {{ form_start(form) }}
<div class="mb-4">
    {{ form_label(form.firstname, null, {'class': 'block text-sm font-medium mb-4 text-black text-center'}) }}
    {{ form_widget(form.firstname, {'class': 'mt-1 p-2 border rounded-md w-full text-white-700 text-center'}) }}
</div>

<div class="mb-4">
    {{ form_label(form.lastname, null, {'class': 'block text-sm font-medium text-black text-center'}) }}
    {{ form_widget(form.lastname, {'class': 'mt-1 p-2 border rounded-md w-full text-center'}) }}
</div>
<div class="mb-4">
    {{ form_label(form.password, null, {'class': 'block text-sm font-medium text-white text-center'}) }}
    {{ form_widget(form.password, {'class': 'mt-1 p-2 border rounded-md w-full text black text-center'}) }}
</div>
    <div class="mb-4">
        {{ form_label(form.profilePicture, null, {'class': 'block text-sm font-medium text-white text-center'}) }}
        {{ form_widget(form.profilePicture, {'class': 'mt-1 p-2 border rounded-md w-full text black text-center'}) }}
    </div>
<button type="submit" class="bg-primary text-black py-2 px-4 rounded-md hover:bg-halloween mx-auto block border-2 border-halloween-dark">Enregistrer les modifs</button>    {{ form_end(form) }}
</div>
{% endblock %}