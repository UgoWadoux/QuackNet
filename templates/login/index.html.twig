{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">DuckName:</label>
        <input type="text" id="username" name="_username"  class="border solid" value="{{ last_username }}">

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" class="border solid">

{#         If you want to control the URL the user is redirected to on success#}
        <input type="hidden" name="_target_path" value="{{ path('allquacks')}}">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="btn btn-primary">login</button>
    </form>

    <a href="{{ path('duck_registration') }}">
        <button class="btn">Cr√©er un compte</button></a>
{% endblock %}
