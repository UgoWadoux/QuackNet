{% extends 'base.html.twig' %}

{% block body%}
<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand">Navbar</a>
    {% if app.user %}
        {# Si l'utilisateur est authentifié #}
        <a class="btn btn-outline-info" href="{{ path('membre') }}">Page membre</a>
        {% if is_granted('ROLE_ADMIN') %}
            {# Si l'utilisateur est authentifié et qu'il est admin #}
            <a class="btn btn-outline-warning" href="{{ path('admin') }}">Page admin</a>
        {% endif %}
        <div>
            Bonjour {{ app.user.duckname }} <a class="btn btn-sm btn-danger" href="{{ path('app_navigation') }}">Déconnexion</a>
        </div>
    {% else %}
        <div>
            <a class="btn btn-sm btn-primary" href="{{ path('duck_registration') }}">S'inscrire</a>
            <a class="btn btn-sm btn-success" href="{{ path('app_login') }}">Se connecter</a>
        </div>
    {% endif %}
</nav>
<div class="container">
    {% if message is defined %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endif %}
    {% endblock %}
</div>